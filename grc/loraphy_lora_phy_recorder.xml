<block>
  <name>LoRa PHY Recorder</name>
  <key>loraphy_lora_phy_recorder</key>
  <category>[LoRa PHY]</category>
  <import>import loraphy</import>
  <make>loraphy.lora_phy_recorder($sf, $bw, $fs, $recording_time_ms, $freq_center, $freq_lora)</make>
  <param>
    <name>Spreading Factor</name>
    <key>sf</key>
    <value>sf</value>
    <type>int</type>
  </param>
  <param>
    <name>Bandwidth</name>
    <key>bw</key>
    <value>int(bw)</value>
    <type>int</type>
  </param>
  <param>
    <name>Sampling Rate</name>
    <key>fs</key>
    <value>int(samp_rate)</value>
    <type>int</type>
  </param>
  <param>
    <name>Recording Time (ms)</name>
    <key>recording_time_ms</key>
    <value>recording_time_ms</value>
    <type>int</type>
  </param>
  <param>
    <name>Freq Center (RX)</name>
    <key>freq_center</key>
    <value>int(freq_center)</value>
    <type>int</type>
  </param>
  <param>
    <name>Freq LoRa (TX)</name>
    <key>freq_lora</key>
    <value>int(freq_lora)</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
